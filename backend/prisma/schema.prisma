generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  OPERATOR
  CUSTOMER
}

enum ChargerStatus {
  AVAILABLE
  OCCUPIED
  OFFLINE
  MAINTENANCE
}

enum SessionStatus {
  PENDING
  ACTIVE
  COMPLETED
  CANCELLED
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  CANCELLED
  EXPIRED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum PricingType {
  FIXED
  TIME_BASED
  DEMAND_BASED
}

enum StationStatus {
  ACTIVE
  INACTIVE
  MAINTENANCE
  OFFLINE
}

enum ChargerType {
  LEVEL_2
  DC_FAST
}

enum ConnectorType {
  CCS
  CHADEMO
  TYPE_2
  J1772
}

/* =======================
   User
======================= */

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  fullName     String
  role         UserRole @default(CUSTOMER)
  refreshToken String?  @db.Text

  reservations     Reservation[]
  chargingSessions ChargingSession[]
  operatedStations Station[]              @relation("StationOperator")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}

/* =======================
   Station
======================= */

model Station {
  id          String  @id @default(uuid())
  name        String
  address     String
  city        String
  latitude    Float
  longitude   Float
  location    Unsupported("geography(Point, 4326)")?
  status      StationStatus @default(ACTIVE)
  operatorId  String 
  isActive    Boolean @default(true)

  operator     User         @relation("StationOperator", fields: [operatorId], references: [id])
  chargers     Charger[]
  pricingRules PricingRule[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime? // soft delete

  @@index([city])
  @@index([status])
  @@index([operatorId])
  @@index([location], type: Gist)
}

/* =======================
   Charger
======================= */

model Charger {
  id            String        @id @default(uuid())
  chargerId     String         @unique  // Physical charger ID (vendor serial)
  stationId     String
  type          ChargerType
  status        ChargerStatus @default(AVAILABLE)
  connectorType ConnectorType
  powerKW       Float
  currentRate   Float?         // Price per kWh


  station           Station          @relation(fields: [stationId], references: [id])
  chargingSessions  ChargingSession[]
  reservations      Reservation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([stationId])
  @@index([status])
  @@index([chargerId])
}

/* =======================
   Charging Session
======================= */

model ChargingSession {
  id          String        @id @default(uuid())
  userId      String
  chargerId   String
  status      SessionStatus @default(PENDING)

  startedAt   DateTime?
  endedAt     DateTime?
  energyKWh   Float?   // total energy delivered
  totalCost   Float?

  user     User     @relation(fields: [userId], references: [id])
  charger  Charger  @relation(fields: [chargerId], references: [id])
  payment  Payment?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([startedAt])
}

/* =======================
   Reservation
======================= */

model Reservation {
  id          String             @id @default(uuid())
  userId      String
  chargerId   String
  status      ReservationStatus  @default(PENDING)

  reservedFrom DateTime
  reservedTo   DateTime

  user     User     @relation(fields: [userId], references: [id])
  charger  Charger  @relation(fields: [chargerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([reservedFrom, reservedTo])
}

/* =======================
   Payment
======================= */

model Payment {
  id               String        @id @default(uuid())
  chargingSessionId String? @unique

  amount     Float
  currency   String  @default("USD")
  status     PaymentStatus @default(PENDING)
  provider   String  // Stripe, PayPal, etc.
  providerRef String?

  chargingSession ChargingSession? @relation(fields: [chargingSessionId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([chargingSessionId])
}

/* =======================
   Pricing Rule
======================= */

//could add rule priority here
model PricingRule {
  id        String      @id @default(uuid())
  stationId String
  type      PricingType @default(FIXED)

  basePricePerKWh Float
  startTime       DateTime?
  endTime         DateTime?
  demandMultiplier Float?

  station Station @relation(fields: [stationId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([stationId])
}
